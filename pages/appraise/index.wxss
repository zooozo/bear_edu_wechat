
page {
    background-color: #fff;
}

.container {

}

.appraise {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 200rpx;
    padding-left: 32rpx;

}

.appraise .icon1 {
    width: 70rpx;
    height: 70rpx;

}

.appraise .icon2 {
    width: 96rpx;
    height: 96rpx;

}

.appraise .item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.appraise .item .box {
    height: 100rpx;
}

.appraise .item .default {
    color: #666;
    font-size: 24rpx;

}

.appraise .item .active {
    font-weight: 600;
    color: #333;
    font-size: 24rpx;

}

.appraise-text {
    margin: 40rpx 0 0 32rpx;
    padding-top: 40rpx;
    border-bottom: 2rpx solid #ededed;
    border-top: 2rpx solid #ededed;
    position: relative;
}

.appraise-text .num {
    color: #aaa;
    font-size: 24rpx;
    position: absolute;
    right: 32rpx;
    bottom: 40rpx;
}


.commons {
    margin-top: 40rpx;
    padding: 0 32rpx;

}

.commons .content-box {
    display: flex;

    align-items: center;
    flex-wrap: wrap;
}

.commons .item {
    width: 208rpx;
    height: 60rpx;

    border-radius:30rpx;
    flex-shrink: 0;
    display:flex;
    border:1rpx solid rgba(229,229,229,1);
    align-items: center;
    justify-content: center;
    margin-bottom:20rpx;
    margin-right:12rpx;
    color:#666;
    font-size:24rpx;
}
.commons .active{
    border:1rpx solid rgba(30,193,154,1);
    color:#1ec19a;
    font-size:24rpx;
}

.title{
    font-size:24rpx;
    color:#666;
    margin-bottom:24rpx;
}

.flex-center .disableBtn{
    background:rgba(30,193,154,1);
    border-radius:46rpx;
    opacity:0.5;
}
.starList{
    display:flex;
    margin-top:40rpx;
    font-size:26rpx;
    color:#666;
    align-items: center;
    padding-left:30px;
}
.star{
    width:50rpx;
    height:50rpx;
    margin-left:40rpx;
}