<view class="container">

        <tabs active="{{ activeIndex }}"
              bind:change="onChange"
              line-width="20"
                  color="#ddd"
              animated
              border="{{false}}"
              type="card"
              style="height:100%;flex:1"
              title-active-color=" #fff"
              title-inactive-color="#1EC19A"
              sticky>
            <tab title="{{item.name}}" wx:for="{{categoryList}}"

                 wx:key="index">
                <!--            title-style="color:{{activeIndex==index?'#333':'#999999'}};font-weight:{{activeIndex==index?'700':'500'}}"-->
                <view class="content" wx:if="{{list.length>0}}">
                    <view wx:for="{{list}}" wx:key="index">
