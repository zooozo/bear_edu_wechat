                        <!--                        tagId: 2-->
                        <!--                        tagName: null-->
                        <!--                        thumbnail: "2021/01/38a8a26c42414b16aba8c2bef57df356.jpg"-->
                        <!--                        title: "33"-->
                        <!--                        updateTime: "2021-01-08 10:55:06"-->
                        <view class="item" bindtap="goToPage" data-item="{{item}}">

                            <view class="right_part">
                                <view class="title cutTxt">{{item.title}}</view>
                                <view class="dec">发布时间:{{item.updateTime}}</view>
                            </view>
                            <image src="{{item.thumbnail}}" class="img"></image>
                        </view>
                    </view>

                </view>
                <view class="content" wx:else>
                    <empty></empty>
                </view>
            </tab>

        </tabs>


        <view style="height:60rpx;color:#aaa;font-size:24rpx;" class="flex-center">
            {{!stopLoad?'加载更多':'没有更多了'}}
        </view>
