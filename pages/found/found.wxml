<view class="container">
    <view class="flex-box">
        <tabs active="{{ activeIndex }}" bind:change="onChange" line-width="20" line-height="4" animated
              border="{{false}}" style="flex:1;width:750rpx;" class="flex-box" sticky>
            <view slot="nav-right" class="flex-center btn-box">
                <view class="btn flex-center" bindtap="goToPage">
                    发动态
                </view>
            </view>
            <tab title="{{item.name}}" wx:for="{{categoryList}}"
                 title-style="color:{{activeIndex==index?'#333':'#999999'}};font-weight:{{activeIndex==index?'700':'500'}}"
                 wx:key="index">
                <view class="content">
                    <view class="list-item" wx:for="{{list}}" wx:key="index">
                        <!--用户信息-->
                        <view class="flex-box flex-space user">
                            <view class="flex-box">
                                <image src="{{item.momentsImgUrl}}" class="headImg"></image>
                                <view class="userInfo">
                                    <view>{{item.nickName}}</view>
                                    <view class="flex-box" style="margin-top:8rpx;">
                                        <image src="../../images/icon/lady.png" class="lv1"></image>
                                        <view class="lv-box">
                                            <view class="lv-text">LV {{item.skillLevel}}</view>
                                            <image src="../../images/icon/lv.png" class="lv2"></image>
                                        </view>

                                    </view>
                                </view>
                            </view>
                            <view class="{{item.delFlag==0?'trend': 'disabledTrend'}} flex-center">
                                {{item.delFlag==0? '关注': '已关注'}}
                            </view>
                        </view>
                        <view class="title">{{item.momentsContent}}</view>
                        <!--图片集合   length判断有问题-->
                        <view >
                            <view  wx:if="{{Number(item.imagelist.length)<3}}" class="flex-box imgBox">
                                <image src="{{item}}" wx:for="{{item.imagelist}}" wx:key="index"
                                       class="imgType2"></image>
                            </view>

                            <view wx:else class="flex-box imgBox">
                                <image src="{{item}}" wx:for="{{item.imagelist}}" wx:key="index"
                                       class="imgType1" >
                                </image>
                            </view>


<!--333844800-->

                        </view>
                        <view class="item-foot flex-box flex-space">
                            <view class="flex-box">
                                <text>{{item.pos}}</text>
                                <view class="point"></view>
                                <text>{{item.timeLong.day>0?item.timeLong.day+'天':item.timeLong.hour+'小时'}}前</text>
                            </view>
                            <view class="flex-box  flex-space talking">
                                <view style="margin-right:30rpx;" class="flex-box flex-y-center">
                                    <image src="../../images/icon/zan1.png" style="margin-right:12rpx;"></image>
                                    <text>{{item.likeCount}}</text>
                                </view>
                                <view class="flex-box flex-y-center">
                                    <image src="../../images/icon/talk.png" style="margin-right:12rpx;"></image>
                                    <text>{{item.commentCount}}</text>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </tab>

        </tabs>

    </view>


</view>