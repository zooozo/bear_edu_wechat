.toastModal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;

}
.toastModal .mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);

}

.toastModal .Modal {
    width: 100%;

    background: rgba(255, 255, 255, 1);
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    z-index: 10;
    position: relative;
    padding: 64rpx 0 26rpx;
}

.toastModal .Modal .cancel {
    width: 24rpx;
    height: 24rpx;

}

.toastModal .Modal .sure {
    width: 100rpx;
    height: 56rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 28rpx;
    border: 2rpx solid rgba(241, 75, 127, 1);
    color: #F14B7F;
    font-size: 24rpx;

}

.toastModal .Modal .notice {
    text-align: center;
    font-size: 24rpx;
    color: #aaa;
}

.toastModal .Modal .row {
    box-sizing: border-box;
    height: 160rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #333;
    font-weight: 700;
}

.toastModal .Modal .row .gou image {
    width: 32rpx;
    height: 32rpx;

}

.toastModal .Modal .row .gou {
    width: 64rpx;
    height: 64rpx;
    display: flex;
    align-items: center;
}

