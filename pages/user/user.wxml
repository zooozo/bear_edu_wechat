<!--pages/user/match.wxml-->
<view class='container'>
    <image src="../../images/userbg.png" class="top-bg"></image>
    <view class="header">
        <view class="userInfo">
            <view class="userAvatar">
                <open-data type="userAvatarUrl"></open-data>
            </view>
            <view style="margin-left:32rpx;">
                <view class="user-nickname">
                    <open-data type="userNickName"></open-data>
                    <!--<image src="../../images/icon/lv.png" class="lvLogo"></image>-->
                </view>
                <view class="message">
                    <text>用走心的签名打动对的人</text>
                    <image src="../../images/icon/editor.png" class="editor" bindtap="tapSettingList"
                           data-current="3"></image>
                </view>
            </view>

        </view>
<!--        <view class="flex-box" style="margin-top:84rpx;">-->
<!--            <view class="item">-->
<!--                <view class="t1">关注</view>-->
<!--                <view class="t2">968</view>-->
<!--            </view>-->
<!--            <view class="item">-->
<!--                <view class="t1">关注</view>-->
