page{
    background-color:#fff;
    padding:0 32rpx;
    height: 100%;
}


.title{
    font-size:28rpx;
    color:#333;
    margin-top:40rpx;
    margin-bottom:36rpx;
    font-weight: 700;
}

.box{
    display:flex;
    flex-wrap: wrap;
}

.item{
    width:200rpx;
    height:64rpx;
    border-radius:32rpx;

    font-size:28rpx;
    box-sizing: border-box;
    display:flex;
    align-items: center;
    justify-content: center;
    margin-right:28rpx;
    margin-bottom:28rpx;
}
.default{
    border:2rpx solid rgba(229,229,229,1);
    color:#666666;
}
.active{
    background:rgba(30,193,154,1);
    color:#fff;
}

.noMargin{
    margin:0
}