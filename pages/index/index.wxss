/**index.wxss**/

page {
    background: #f7f7f7;
    height: auto;
}


.wx-swiper-dots {
    margin-bottom: 15rpx;
}

.banner-item {
    box-sizing: border-box;
}

swiper.pic-swiper .banner {
    position: absolute;
    width: 690rpx;
    margin: 0 10rpx;
    height: 402rpx;
    border-radius: 8rpx;
    display: inline-block;
    box-shadow: 0 4px 10px 0 rgba(83, 83, 83, 0.288);
}

.container {
    background: #fff;
}

.container .bg-sear {
    width: 100%;
    background-color: #1EC19A;
    padding-bottom: 36rpx;
    text-align: center;
}

.searchBox {
    display: flex;
    justify-content: center;
}

.bg-sear .section {
    display: flex;
    align-items: center;
    height: 68rpx;
    margin-top: 40rpx;
    border-radius: 50rpx;
    width: 92%;
    background: #f7f7f7;
    padding-left: 30rpx;
}


.bg-sear .section .placeholder {
    display: block;
    font-size: 24rpx;
    color: #999;
}

.bg-sear .section .search-img {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

/* 分类栏目 */

.content {
    background: #fff;
    border-radius: 36rpx 36rpx 0 0;

    padding: 40rpx 32rpx 40rpx;
}

.content swiper {
    height: 300rpx;
}

.content swiper-item {
    height: auto !important;
}

.swiper-Image {
    width: 686rpx;
    height: 300rpx;
    border-radius: 20rpx;
}

.tab {
    display: flex;
}

.tab_item {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #9F9F9F;
    color: #fff;
    height: 70rpx;
    font-size:29rpx;
    border-radius: 20rpx 20rpx 0  0 ;
}

.title{
    font-size:40rpx;
    font-weight:600;
    height:80rpx;
    align-items: center;
    padding:0 32rpx;
    margin-top:30rpx;
}

.watchAll{
    padding:10rpx;
    color:#fff;
    background:#304653;
    border-radius:14rpx;
    font-weight: normal;
    font-size:22rpx;
}



