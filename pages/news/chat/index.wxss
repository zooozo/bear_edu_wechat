page {
    background-color: #F5F5F5;
    height: 100%;
}

.container {
    height: auto;
}

.talking-item {
    width: 100rpx;
    height: 44rpx;
    background-color: #fff;
    border-radius: 22rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #aaa;
    font-size: 22rpx;
    margin: 40rpx auto 20rpx;

}

.talk-list {
    margin-top: 26rpx;
}

.talk-list .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;

}

.msg {
    display: flex;
    margin-bottom: 40rpx;

}

.msg2 {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 40rpx;

}

.avatar-self {
    margin-right: 40rpx;


}

.avatar-your {
    margin-left: 40rpx;
}

.talkItem {
    max-width: 300rpx;
    box-sizing: border-box;
    border-radius: 10rpx;

    position: relative;
    display: flex;
    align-items: center;
    padding: 20rpx;
    font-size: 28rpx;
    line-height: 40rpx;

}

.fontStyle {
    color: #333;
    background-color: #fff;
    align-self: center;
}

.fontStyle1 {
    color: #fff;
    background-color: #3FC7A7;
    align-self: center;
}

.imageStyle{
    background-color: transparent;

}

.badge {
    position: absolute;
    right: -38rpx;
    top:20rpx;
    flex-shrink: 0;
    border: 20rpx solid;
    border-color: transparent transparent transparent #3FC7A7;
}

.badge1 {
    position: absolute;
    left: -38rpx;
    top:20rpx;
    flex-shrink: 0;
    border: 20rpx solid;
    border-color: transparent #fff transparent transparent;
}
.postImg{
    width:200rpx;
    height:200rpx;
    border-radius: 16rpx;
}

.video{
    width:300rpx;
    height:300rpx;
}
.foot-module {
    display: flex;
    flex-direction: column;
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
}

.footGroup {

    height: 100rpx;
    background-color: #fff;

    padding:0 32rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.footGroup .input-text {
    font-size: 28rpx;
    color: #cecece;
    display: flex;
}

.footGroup .icon {
    width: 48rpx;
    height: 48rpx;
}


.emoji {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    height: 300rpx;
    padding: 30rpx 0;
    background: #fff;
}

.emoji .emojiItem {
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}

.action-list {
    display: flex;
    background:#f5f5f5;
    height: 400rpx;
    padding: 30rpx 0;
    flex-wrap: wrap;
}


.list-item{
    text-align: center;
    margin-left:60rpx;
}
.action-list .list-photo {
    background-color: #fff;
    border-radius: 16rpx;
    width: 120rpx;
    height:120rpx;
    display: flex;
    align-items: center;
    justify-content: center;

    flex-direction: column;
}

.action-list .list-item .icon {
    width: 100rpx;
    height: 100rpx;
}.action-list .list-item .txt {
    font-size:24rpx;
    color:#333;
    margin-top:16rpx;
}