.container {
    padding: 34rpx 40rpx;
    height: auto;
    box-sizing: border-box;

}

page {
    height: auto;
    background-color: #fff;
}

.page-font {
    font-size: 24rpx;
    color: #aaa;
    margin-bottom: 24rpx;
}

.page-img {
    width: 260rpx;
    height: 260rpx;
    border-radius: 8rpx;
}

.page-img2 {
    width: 326rpx;
    height: 264rpx;
    border-radius: 8rpx;
    object-fit: cover;
}

.row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #333;
    font-size: 30rpx;
    border-bottom: 2rpx solid #EDEDED;
    height: 102rpx;
}
.row ::placeholder{
    color: #CECECE;
}
.row .font2 {
    color: #666;
    text-align: right;
}

.row .font1 {
    color: #CECECE;

}

.row .icon {
    width: 24rpx;
    height: 22rpx;
    margin-left: 8rpx;
}

.defaultBtn {
    color: #fff;
    font-size: 30rpx;
    margin-top: 120rpx;
}

.row .flex-center {
    flex: 1;
    justify-content: flex-end;
}

.sex {
    width: 110rpx;
    height: 56rpx;
    border-radius: 8rpx;
    border: 1rpx solid #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #1FC19A;
    margin-right: 30rpx;
}

 .sex_active {
    width: 110rpx;
    height: 56rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #F3F9FF;
    border-radius: 8rpx;
    color: #4793E5;
    font-size: 26rpx;
}

.btn {
    width: 500rpx;
    height: 92rpx;
    background: linear-gradient(90deg, #F7B562 0%, #EA9F38 100%);
    box-shadow: 0px 9px 10px -9px rgba(59, 117, 180, 0.57);
    border-radius: 6px;
    filter: blur(0px);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 48rpx;
    font-size: 30rpx;
    color: #fff;
}