/**app.wxss**/
.container {
  height: 100%;
  box-sizing: border-box;
  color: #333;
  font-family: helvetica,'Heiti SC',PingFangSC-Light;
} 
.price{
  font-family: Arial;
  display: inline-block;
  color: #eb2444;
  padding-bottom:10rpx;
padding-left:10rpx;

}



/* 价格数字显示不同大小 */

.symbol {
  font-size: 24rpx;
}

.big-num {
  font-size: 32rpx;
}

.small-num {
  font-size: 24rpx;
}


.flex-center{
  display:flex;
  justify-content: center;
  align-items: center;
}

.flex-box{
  display:flex;
}

.flex-space{
  justify-content: space-between;
}

.flex-colomn{
  flex-direction: column;
}

.defaultBtn{
  width:343rpx;
  height:45rpx;
  background:linear-gradient(246deg,rgba(248,151,120,1) 0%,rgba(241,75,127,1) 100%);
  box-shadow:0 2rpx 12rpx 0rpx rgba(241,75,127,0.35);
  border-radius:23rpx;
}

